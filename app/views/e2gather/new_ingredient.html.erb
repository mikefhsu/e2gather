<% provide(:title, "New Ingredient") %>
<h1>New Ingredient</h1>
<div class = "field">
  <div class="span6 offset3">
    <%= form_tag("create_ingredient", method: "post", ) do %>

<p>    

    <%=label_tag(:name, "Name") %>
    <%= text_field_tag(:name) %>
    <br>
    <%= label_tag(:quantity, "Quantity") %>
    <%= text_field_tag(:quantity) %>
    <br>
    <%= label_tag(:unit, "Unit") %>
    <%= select('', :unit, ['Unit(s)', 'Teaspoon(s)', 'Tablespoon(s)', 'Fluid Ounce(s)', 
	'Cup(s)', 'Pint(s)', 'Quart(s)', 'Gallon(s)', 'Pound(s)', 'Ounce(s)'], {}, 
	{ index: nil }) %>
    <br>
    <%= submit_tag "Submit" %>

</p>
  <% end %>
  </div>
</div>

