<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :date_time %><br>
    <%= f.datetime_select :date_time %>
  </div>
  <div class="field">
    <%= f.label :ingredient_list %><br>
    <%= f.text_area :ingredient_list %>
  </div>
  <div class="field">
    <%= f.label :guest_list %><br>
    <%= f.text_area :guest_list %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.radio_button :status, 'Pending' %>
    <%= f.label 'Pending', 'Event Pending' %><br>
    <%= f.radio_button :status, 'Confirmed' %>
    <%= f.label 'Confirmed', 'Event Confirmed' %><br>
    <%= f.radio_button :status, 'Cancelled' %>
    <%= f.label 'Cancelled', 'Event Cancelled' %><br>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
